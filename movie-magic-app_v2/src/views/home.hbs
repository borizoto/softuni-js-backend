<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">

        <!-- If there are posts for creature in the database display each of them -->
        {{#each movies}}
        <div class="flip flip-vertical">
            <div class="front">
                <img src="{{this.imageUrl}}" alt="{{this.title}}">
            </div>
            <div class="back">
                <h1>{{this.title}}</h1>
                <h2>Genre: {{this.genre}}</h2>
                <p>Description: {{this.description}}</p>
                <a href="/movies/{{this.id}}/details" class="details">Details</a>
            </div>
        </div>
        {{/each}}
        <!-- If there are still no posts in the database display: -->
        <!-- <div class="no-posts">
                        <p class="no-offer">There are no posts yet...</p>
                    </div> -->
    </div>
</section>