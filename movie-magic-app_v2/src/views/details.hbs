<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{this.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{this.genre}}</p>
                        <p class="card-director">Directror: {{this.director}}</p>

                    </div>
                    <div class="second-info">

                        <p class="card-year">Year: {{this.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">&#x2605; &#x2605; &#x2605;
                                &#x2605;</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{this.description}}</p>
                <p class="card-category">Category: {{this.category}}</p>
            </div>
        </div>
        <div class="card_right">
            <img src="{{this.imageUrl}}" alt="{{this.title}}">
        </div>
    </div>

</section>