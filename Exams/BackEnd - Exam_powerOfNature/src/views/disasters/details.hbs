<section id="details-info">
    <h1>Details</h1>
    <div class="image">
        <img src="{{disaster.image}}">
    </div>

    <div class="info">
        <div class="text">
            <h1 id="name">{{disaster.disasterName}}</h1>
            <h3 id="location">Location: {{disaster.location}}</h3>
            <p id="type">Type: {{disaster.disasterType}}</p>
            <p id="year"><span>Year of the Event: {{disaster.year}}</span></p>
            <p id="interested">Interested: {{disaster.interestedList.length}}</p>
            <p id="description">{{disaster.description}}</p>
        </div>

        {{#if user}}
        <div class="product-btn">
            {{#if isOwner}}
            <div class="author">
                <a href="/disasters/{{disaster._id}}/edit" class="btn-edit">Edit</a>
                <a href="/disasters/{{disaster._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{!-- <button class="btn edit"><a href="/disasters/{{disaster._id}}/edit">Edit</a></button>
            <button class="btn delete"><a href="/disasters/{{disaster._id}}/delete">Delete</a></button> --}}
            {{else}}
            {{#if isPreferred}}
            <p class="interested-message">You've already been interested in this event!</p>
            {{!-- <p class="prefer-message">You've already interested this disaster</p> --}}
            {{else}}
            <a href="/disasters/{{disaster._id}}/prefer" class="btn-interested">Interested</a>
            {{!-- <button class="btn prefer"><a href="/disasters/{{disaster._id}}/prefer">Prefer</a></button> --}}
            {{/if}}
            {{/if}}
        </div>
        {{/if}}

    </div>
</section>